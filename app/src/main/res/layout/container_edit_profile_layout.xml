<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"><LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout

        android:layout_gravity="center"
        android:gravity="center"
        android:padding="20dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/id_profilePic"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@mipmap/ic_launcher"
            app:civ_border_color="@color/black"
            app:civ_border_width="2dp" />
        <TextView
            android:layout_marginTop="10dp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change Photo"
            android:textSize="16sp"
            android:textColor="@color/link_color"/>
    </LinearLayout>
    <LinearLayout

        android:background="@drawable/gray_border_bottom_setting_activity"
        android:padding="10dp"
        android:layout_margin="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_name_profile"/>
        <EditText
            android:background="@color/white"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="26sp"
            android:layout_marginStart="15dp"
            android:textColor="@color/black"
            android:text="M7moud.Gamil"
            android:layout_marginLeft="15dp" />


    </LinearLayout>
    <LinearLayout
        android:background="@drawable/gray_border_bottom_setting_activity"
        android:padding="10dp"
        android:layout_margin="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"

            android:src="@drawable/ic_name_nick"/>
        <EditText
            android:background="@color/white"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="26sp"
            android:layout_marginStart="15dp"
            android:textColor="@color/black"
            android:text="Mahmoud gamil"
            android:layout_marginLeft="15dp" />


    </LinearLayout>
    <LinearLayout
        android:background="@drawable/gray_border_bottom_setting_activity"
        android:padding="10dp"
        android:layout_margin="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"

            android:src="@drawable/ic_link_me"/>
        <EditText
            android:background="@color/white"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="26sp"
            android:layout_marginStart="15dp"
            android:textColor="@color/black"
            android:text="01000595860"
            android:layout_marginLeft="15dp" />


    </LinearLayout>
    <LinearLayout

        android:background="@drawable/gray_border_bottom_setting_activity"
        android:padding="10dp"
        android:layout_margin="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_turned"/>
        <EditText
            android:background="@color/white"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="26sp"
            android:layout_marginStart="15dp"
            android:textColor="@color/black"
            android:hint="Edit Profile"
            android:layout_marginLeft="15dp" />


    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PRIVATE INFORMATION"
        android:textColor="@color/black"
        android:textSize="26sp"
        android:padding="8dp"
        android:layout_gravity="center"
        android:background="@drawable/gray_border_bottom_setting_activity"/>

    <LinearLayout

        android:background="@drawable/gray_border_bottom_setting_activity"
        android:padding="10dp"
        android:layout_margin="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_mail"/>
        <EditText
            android:background="@color/white"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="26sp"
            android:layout_marginStart="15dp"
            android:textColor="@color/black"
            android:hint="Edit Profile"
            android:layout_marginLeft="15dp" />


    </LinearLayout>
    <LinearLayout
        android:background="@drawable/gray_border_bottom_setting_activity"
        android:padding="10dp"
        android:layout_margin="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"

            android:src="@drawable/ic_phone"/>
        <EditText
            android:background="@color/white"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="26sp"
            android:layout_marginStart="15dp"
            android:textColor="@color/black"
            android:hint="Edit Profile"
            android:layout_marginLeft="15dp" />


    </LinearLayout>
</LinearLayout></ScrollView>
</LinearLayout>